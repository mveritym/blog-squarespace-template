{.section item}
<div class="blog-article">

  <div class="blog-article__details">
    {.section author}
    <a class="blog-article__author-name fontS sansSerif" href="{collection.fullUrl}?author={author.id}">{displayName}</a>
    {.end}

    <time class="blog-article__time fontS sansSerif" datetime="{addedOn|date %F}" pubdate>
      {addedOn|timesince}
    </time>
  </div>

  <h1 class="blog-article__title fontL serif" data-content-field="title">
    {title}
  </h1>

  {.main-image?}
  <img class="blog-article__main-image" src="{assetUrl}?w=1000w">
  {.or}
  {.end}

  <div class="blog-article__body serif">{.section body}{@}{.end}</div>

</div>
{.end}
