{.section item}
<div class="blog-article">
  <div class="blog-article__details">
    {.section author}
    <a class="blog-article__author-name fontXS sansSerif" href="{collection.fullUrl}?author={author.id}">{displayName}</a>
    {.end}

    <time class="blog-article__time fontXS sansSerif" datetime="{addedOn|date %F}" pubdate>
      {addedOn|timesince}
    </time>
  </div>

  <h2 class="blog-article__title fontL boldSerif" data-content-field="title">
    {title}
  </h1>

  {.main-image?}
  <img class="blog-article__main-image" src="{assetUrl}?w=1000w">
  {.or}
  {.end}

  <div class="body-author__container">
    <div class="blog-article__body serif">
      {.section body}{@}{.end}
    </div>
    <div class="meta-block">
      {.section author}
        <div class="author">
          <div class="author__name">
            <a href="/?author={author.id}" class="boldSansSerif">
              <span>{author.firstName}</span>
              <span>{author.lastName}</span>
            </a>
          </div>
          <div class="author__bio sansSerif">
            {author.bio}
          </div>
          <a href="/?author={author.id}" class="boldSansSerif author__profile">
            <span>
              More from {author.firstName}
            </span>
            <img class="arrow" src="/assets/arrow.svg" />
          </a>
        </div>
      {.end}
      {.section categories}
        <ul class="category-list boldSansSerif">
          {.repeated section @}
            <li>
              <a href="/blog/?category={@|url-encode}">{@}</a>
            </li>
          {.end}
        </ul>
      {.end}
      {.section tags}
        <ul class="tags-list boldSansSerif">
          {.repeated section @}
            <li>
              <a href="/blog/?tag={@|url-encode}">{@}</a>
            </li>
          {.end}
        </ul>
      {.end}
    </div>
  </div>

</div>
{.end}
