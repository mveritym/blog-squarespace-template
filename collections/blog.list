  <h1 class="fontXL boldSerif">Blog</h1>

  <!-- Show active filters -->
  {.section categoryFilter}
  <p class="filter-heading filter-by-category loading" sqs-controller="FadeInContent">
    All in <span class="category-name">{@}</span>
  </p>
  {.end}

  {.section tagFilter}
  <p class="filter-heading filter-by-tag loading" sqs-controller="FadeInContent">
    All tagged <span class="category-name">{@}</span>
  </p>
  {.end}

  {.if authorFilter}
  <div class="filter-heading filter-by-author loading" sqs-controller="FadeInContent">
    <p>All by {author.displayName}</p>
    {.if author.avatarId}
    <div class="author-avatar content-fill">
      <img class="author-avatar-image" data-src="{author.avatarAssetUrl}" data-image="{author.avatarAssetUrl}" data-image-focal-point="0.5,0.5">
    </div>
    {.end}
  </div>
  {.end}
  <div class="loading-spinner"></div>

  <div class="blog-list blog-wrapper" id="blogList" sqs-controller="BlogGrid">
  {.repeated section items}
    <article class="entry entry--list h-entry grid-hidden {.main-image?} has-main-image {.end}{@|item-classes}" id="article-{id}" label="Blog Post" data-item-id="{id}" data-offset="{addedOn}"{.if pagination.nextPage}{.or} data-last-page{.end}>

    <div class="entry-text">
      <div class="entry-content">
        {.section author}<span class="blog-meta-item blog-meta-author"><a href="{collection.fullUrl}?author={author.id}" class="blog-author-name">{displayName}</a> </span>{.end}

        <time class="dt-published date-callout" datetime="{addedOn|date %F}" pubdate>
          <div class="date-wrapper">
            <span class="month">{addedOn|date %b} </span><span class="day">{addedOn|date %e}</span>
          </div>
        </time>
      </div>
    </div>

    <header class="entry-header">
      <h2 class="entry-title entry-title--list p-name fontL boldSerif" itemprop="headline" data-content-field="title" >
        {.passthrough?}
          <a href="{sourceUrl}" class="entry-title-passthrough" target="_blank">
          {.or}
          <a href="{fullUrl}" class="u-url" rel="bookmark">
          {.end}
          {title}
        </a>
      </h2>
    </header>

    <div class="entry-text">
      <div class="entry-content">
        {.excerpt?}
          <div class="entry-excerpt serif p-summary">{excerpt}</div>
        {.end}
      </div>
    </div>

    <div class="thumbnail-title-wrapper">
      {.main-image?}
      <div class="excerpt-thumb">
        <a href="{fullUrl}" class="excerpt-image content-fill">
          <img src="{assetUrl}?format=500w" />
        </a>
      </div>
      {.end}
    </div>
  </article>{.end}

</div>
{.if pagination}
{.if pagination.nextPage}<div class="load-more-wrapper"><a class="load-more sansSerif fontStaticM" href="{pagination.nextPageUrl}">Load More</a></div>{.end}
{.end}
<div class="breaker"></div>
